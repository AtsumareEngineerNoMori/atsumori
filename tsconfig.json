{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/views/**/*.vue",
    "src/components/**/*.vue",
    "src/components/date/*.vue",
 ],
  "exclude": ["node_modules"]
}
