{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
    "src/**/*.ts",
    "src/views/**/*.vue",
    "src/components/*.vue",
    "src/**/*",
  ],

  "exclude": ["node_modules"]
}
