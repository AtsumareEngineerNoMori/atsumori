{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/views/**/*.vue",
    "src/components/*.vue",
    "src/**/*",
    "src/components/**/*.vue",
    "src/components/date/*.vue",
    "src/router/index.js",
    "src/**/**/*.vue",
    "src/views/**/*.vue",
    "src/components/**/**/*.vue",
  ],

  "exclude": ["node_modules"]
}
